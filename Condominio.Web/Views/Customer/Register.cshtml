@model Condominio.Web.Models.CustomerViewModel
@{
    var ResidentialList = (List<ResidencialViewModel>)ViewBag.ResidentialList;
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(c => c.ResidentialId, "Seleccionar residencial")
        <select asp-for="ResidentialId" asp-items="@(new SelectList(ResidentialList,"ResidentialId","ResidentialName"))" class="form-control">
            <option>Por favor,Selecciona el residencial</option>
        </select>
        @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.FirstName, "Nombre")
        @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control", placeholder = "Entrar el nombre" })
        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.LastName, "Apellido")
        @Html.TextBoxFor(c => c.LastName, new { @class = "form-control", placeholder = "Entrar el apellido" })
        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Phone, "Telefono")
        @Html.TextBoxFor(c => c.Phone, new { @class = "form-control", placeholder = "Entrar el telefono" })
        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Email, "Correo electronico")
        @Html.TextBoxFor(c => c.Email, new { @class = "form-control", placeholder = "Entrar el correo" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>

    <br />

    <input type="submit" class="btn btn-primary" value="Enviar" />
}