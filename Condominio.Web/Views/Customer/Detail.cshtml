        <div class="form-group">
            @Html.LabelFor(c => c.FirstName, "Nombre")
            @Html.TextBoxFor(c => c.FirstName, new { @class = "form-control", placeholder = "Entrar el nombre", disabled = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.LastName, "Apellido")
            @Html.TextBoxFor(c => c.LastName, new { @class = "form-control", placeholder = "Entrar el apellido", disabled = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Phone, "Telefono")
            @Html.TextBoxFor(c => c.Phone, new { @class = "form-control", placeholder = "Entrar el telefono", disabled = true })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Email, "Correo electronico")
            @Html.TextBoxFor(c => c.Email, new { @class = "form-control", placeholder = "Entrar el correo", disabled = true })
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        Pagos
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Monto pagado</th>
                <th>Fecha pagado</th>
            </tr>
            <tbody>
                @foreach (var item in Model.Payments)
                {
                    <tr>
                        <td>@item.PaymentId</td>
                        <td>@item.PaymentsAmount</td>
                        <td>@item.PaymentDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col">
        Cuotas
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Cuota</th>
                <th>Dia de pago</th>
                <th>Porcentaje mora</th>
            </tr>
            <tbody>
                @foreach (var item in Model.Dues)
                {
                    <tr>
                        <td>@item.DueId</td>
                        <td>@item.Amount</td>
                        <td>@item.PaymentDay</td>
                        <td>@item.PercentCharges</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>