@{
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(c => c.BusinessName, "Nombre del condominio")
        @Html.TextBoxFor(c => c.BusinessName, new { @class = "form-control", placeholder = "Entrar nombre del condominio" })
        @Html.ValidationMessageFor(model => model.BusinessName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Phone, "Telefono")
        @Html.TextBoxFor(c => c.Phone, new { @class = "form-control", placeholder = "Entrar el Telefono del condominio" })
        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Email, "Correo electronico")
        @Html.TextBoxFor(c => c.Email, new { @class = "form-control", placeholder = "Entrar el correo electronico del condominio" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Address, "Direccion")
        @Html.TextBoxFor(c => c.Address, new { @class = "form-control", placeholder = "Entrar dirección del condominio" })
        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
    </div>
    <br />    
    <input type="submit" class="btn btn-primary" value="Enviar" />
}